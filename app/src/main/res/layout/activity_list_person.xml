<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ListPersonActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출입명부"
            android:fontFamily="@font/font_notosans"
            android:textFontWeight="500"
            android:includeFontPadding="false"
            android:textSize="18dp"
            android:textColor="@color/black2"
            android:lineSpacingExtra="19sp"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="23dp"
        android:src="@drawable/white_roundbox_5"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_person"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:includeFontPadding="false"
        android:lineHeight="37dp"
        android:text="해커톤"
        android:textColor="@color/deep_sky_blue"
        android:textFontWeight="500"
        android:textSize="14dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_profile" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:includeFontPadding="false"
        android:lineHeight="37dp"
        android:text="님"
        android:textColor="@color/brownish_grey"
        android:textFontWeight="500"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:includeFontPadding="false"
        android:lineHeight="37dp"
        android:text="B-pass@gmail.com"
        android:textColor="@color/brown_grey"
        android:textFontWeight="400"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <ImageButton
        android:id="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white_two"
        app:layout_constraintTop_toBottomOf="@+id/btn_location"
        android:layout_marginTop="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_person"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:overScrollMode="never"
        android:paddingVertical="30dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:listitem="@layout/item_list"/>

    <LinearLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view">

        <fragment
            android:id="@+id/fragment_map"
            android:name="com.naver.maps.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:gravity="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="오늘"
        android:layout_marginRight="15dp"
        android:textColor="@color/black2"
        android:textFontWeight="700"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_one"
        app:layout_constraintTop_toTopOf="@+id/tv_one" />


    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:gravity="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="1주"
        android:layout_marginRight="15dp"
        android:textColor="@color/black2"
        android:textFontWeight="300"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_two"
        app:layout_constraintTop_toTopOf="@+id/tv_two" />

    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:gravity="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="2주"
        android:textColor="@color/black2"
        android:textFontWeight="300"
        android:textSize="13sp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>