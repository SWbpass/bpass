<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:includeFontPadding="false"
        android:lineSpacingExtra="8dp"
        android:text="해커톤1"
        android:textColor="@color/black2"
        android:textFontWeight="500"
        android:textSize="16dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_cjkkr_light"
        android:gravity="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6dp"
        android:text="T. 1522-3232"
        android:textColor="#707070"
        android:textFontWeight="400"
        android:layout_marginRight="23dp"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="입장  "
        android:textColor="#232323"
        android:textFontWeight="500"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_entrance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="AM 11 : 30 : 45"
        android:textColor="#4aa2f9"
        android:textFontWeight="500"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="퇴장  "
        android:textColor="#232323"
        android:textFontWeight="500"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_notosans"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="AM 11 : 30 : 45"
        android:textColor="#4aa2f9"
        android:textFontWeight="500"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="@+id/textView21" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/brownish_grey"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        android:layout_marginTop="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>